# Backend Environment Configuration Template
# Copy this file to .env and update values as needed

# Application Settings
SERVER_PORT=8080
APP_NAME=photo-gallery

# Storage Configuration
STORAGE_ROOT_PATH=../uploads
STORAGE_ORIGINAL_PATH=original
STORAGE_THUMBNAIL_PATH=thumbnails
STORAGE_PREVIEW_PATH=previews

# Image Processing Settings
THUMBNAIL_SIZE=300
PREVIEW_SIZE=1280
IMAGE_QUALITY=0.85

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_REQUEST_SIZE=104857600

# H2 Database Configuration
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console
H2_FILE_PATH=./data/photogallery
H2_USERNAME=sa
H2_PASSWORD=

# Database Settings
DB_SCHEMA=photogallery
DB_DDL_AUTO=update

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log

# Performance Settings
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5

# Cache Settings
CACHE_CONTROL_MAX_AGE=86400
