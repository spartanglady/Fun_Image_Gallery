# Frontend Environment Configuration Template
# Copy this file to .env and update values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# API Endpoints
VITE_API_PHOTOS_ENDPOINT=/api/photos
VITE_API_UPLOAD_ENDPOINT=/api/photos/upload
VITE_API_SEARCH_ENDPOINT=/api/photos/search

# Upload Settings
VITE_MAX_FILE_SIZE=52428800
VITE_SUPPORTED_FORMATS=image/jpeg,image/png,image/gif,image/webp,image/heic

# Performance Settings
VITE_PHOTOS_PER_PAGE=50
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000

# Feature Flags
VITE_ENABLE_DUPLICATE_CHECK=true
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_EXIF_DISPLAY=true

# Development
VITE_DEV_PORT=5173
VITE_ENABLE_DEV_TOOLS=true
